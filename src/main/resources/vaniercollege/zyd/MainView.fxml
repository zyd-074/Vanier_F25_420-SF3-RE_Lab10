              <MenuItem fx:id="copyItem" mnemonicParsing="false" text="Copy" />
                  <Menu fx:id="searchMenu" mnemonicParsing="false" text="Search">
                    <items>
                      <MenuItem fx:id="findItem" mnemonicParsing="false" text="Find" />
                        <MenuItem fx:id="replaceItem" mnemonicParsing="false" text="Replace" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu text="_Setting">
            <items>
              <MenuItem fx:id="smallItem" mnemonicParsing="false" text="Small" />
                  <MenuItem fx:id="mediumItem" mnemonicParsing="false" text="Medium" />
                  <MenuItem fx:id="largeItem" mnemonicParsing="false" text="Large" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
