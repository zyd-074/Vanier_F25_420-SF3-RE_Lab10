<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0" style="-fx-stroke: -fx-text-base-color;: 1;" stylesheets="@style.css" />
   </center>
   <top>
      <MenuBar minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
        <menus>
          <Menu style="-fx-stroke: -fx-text-base-color;" text="_File">
            <items>
              <MenuItem id="newItem" fx:id="newItem" mnemonicParsing="false" text="New" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="openItem" fx:id="openItem" mnemonicParsing="false" text="Open..." />
