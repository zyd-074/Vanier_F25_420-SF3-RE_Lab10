<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vaniercollege.zyd.MainController">
   <center>
      <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0" stylesheets="@style.css" />
   </center>
   <top>
      <MenuBar minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" stylesheets="@style.css" BorderPane.alignment="CENTER">
        <menus>
          <Menu style="-fx-stroke: -fx-text-base-color;" text="_File">
            <items>
              <MenuItem id="newItem" fx:id="newItem" mnemonicParsing="false" onAction="#handleNew" text="New" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="openItem" fx:id="openItem" mnemonicParsing="false" onAction="#handleOpen" text="Open..." />
                  <MenuItem id="closeItem" fx:id="closeItem" mnemonicParsing="false" onAction="#handleClose" text="Close" />
                  <MenuItem id="saveItem" fx:id="saveItem" mnemonicParsing="false" onAction="#handleSave" text="Save As..." />
            </items>
          </Menu>
          <Menu text="_Edit">
            <items>
                  <CheckMenuItem fx:id="gridItem" mnemonicParsing="false" onAction="#handleGrid" text="Use GridLines" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="copyItem" mnemonicParsing="false" onAction="#handleCopy" text="Copy" />
                  <Menu fx:id="searchMenu" mnemonicParsing="false" text="Search">
                    <items>
                      <MenuItem fx:id="findItem" mnemonicParsing="false" onAction="#handleFind" text="Find" />
                        <MenuItem fx:id="replaceItem" mnemonicParsing="false" onAction="#handleReplace" text="Replace" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu text="_Setting">
               <items>
                  <RadioMenuItem fx:id="smallItem" mnemonicParsing="false" onAction="#handleSizeSmall" text="Small">
                     <toggleGroup>
                        <ToggleGroup fx:id="sizeGroup" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="mediumItem" mnemonicParsing="false" onAction="#handleSizeMedium" selected="true" text="Medium" toggleGroup="$sizeGroup" />
                  <RadioMenuItem fx:id="largeItem" mnemonicParsing="false" onAction="#handleSizeLarge" text="Large" toggleGroup="$sizeGroup" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
